// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "use_modifier_to_send": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "ollama",
      "model": "gpt-oss:20b"
    }
  },
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "light": "Zed Legacy: Rosé Pine Dawn",
    "dark": "Zed Legacy: Rosé Pine"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Colored Zed Icons Theme Light",
    "dark": "Colored Zed Icons Theme Dark"
  },
  "ui_font_family": "ZedMono Nerd Font Propo",
  "ui_font_size": 14,
  "buffer_font_family": "ZedMono Nerd Font Mono",
  "buffer_font_size": 14,
  "buffer_line_height": "standard",
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "auto_update": false,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "format_on_save": "off",
  "soft_wrap": "editor_width",
  "relative_line_numbers": true,
  "minimap": {
    "show": "always"
  },
  "terminal": {
    "font_family": "ZedMono Nerd Font Mono"
  },
  "auto_install_extensions": {
    // LANGUAGES
    "html": true,
    "scss": true,
    "toml": true,
    "php": true,
    "git-firefly": true,
    "xml": true,
    "nunjucks": true,
    "typst": true,
    // HELPERS
    "emmet": true,
    // THEMES
    "zed-legacy-themes": true,
    "rose-pine-theme": true,
    // ICON THEMES
    "colored-zed-icons-theme": true
  },
  "file_types": {
    "HTML": ["njk"]
  },
  "languages": {
    "SCSS": {
      "formatter": "language_server"
    }
  },
  "lsp": {
    "tinymist": {
      "settings": {
        "exportPdf": "onSave",
        "outputPath": "$root/pdf/$dir/$name"
      }
    }
  }
}
